<div class="pull-right">
  <br>
  <%= link_to("新增工作岗位", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<div class="row jobs-show">
</div>
<div class="job-table">
  <% @jobs.each do |job| %>
  <div class="row jobs-show">

    <div class="col-md-12 col-lg-9 col-lg-offset-1">

      <div class="pull-right">
      发布时间：<%= job.created_at.to_date %>
      </div>
    <p>  <%= render_job_status(job) %>

      <%= link_to(job.title, admin_job_path(job), class: 'job-name') %></p>
      <div class="row">
        <div class="col-md-12">
          <p class="wage-range"><%= job.wage_lower_bound %> - <%= job.wage_upper_bound %> </p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p><%= job.description %> </p>
        </div>
      </div>
      <div class="pull-right">
        <div class="pull-right col-md-12">
          <%= link_to("编辑", edit_admin_job_path(job), :class => "btn btn-xs btn-primary") %>
          <%= link_to("删除", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-info", :data => { :confirm => "Are you sure?" }) %>
          <% if job.is_hidden %>
            <%= link_to("发布", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success") %>
          <% else %>
            <%= link_to("隐藏", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning") %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
  <% end %>
</div>
<div class="text-center">
  <%= will_paginate @jobs %>
</div>
