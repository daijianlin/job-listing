<div class="top54" id="include-job2">
  <h3>新增工作岗位</h3>
  <br>

  <%= simple_form_for [:admin, @job ] do |f| %>

  <%= f.input :title, :label => "职位名称" %>
  <%= f.input :description, :label => "工作描述", :input_html => {:rows => 10}%>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :contact_email, :label => "联系email" %>
  <%= f.input :is_hidden, :label => "隐藏"%>
  <%= f.submit "提交该工作", class: "btn btn-default", data: { disable_with: "Submitting..." } %>
  <% end %>
  <br>
  <br>
  <br>
  <br>
  <br>
</div>
